{% layout none %}
{%assign showSidebar = settings.aside_category_enable -%}
{%if showSidebar  %}
{%if  settings.filter_price == false and settings.filter_vendor == false and settings.filter_type == false and settings.filter_tag1 == false and settings.filter_tag2 == false %}
{%assign showSidebar = false -%}
{%endif-%}
{%endif -%}
<div class="category-products">
	{%comment-%}
	{% if search.results.size > 0 %}
	<div>
		{%include 'collection-sortby'%}
	</div>
	{%endif%}
	{%endcomment-%}
	{% paginate search.results by settings.collection_number_product %}	
	{% if search.results.size > 0 %}
	<section class="products-view products-view-grid collection_reponsive list_hover_pro mb-0">
		<div class="row content-col">
			{% for product in search.results %}
			<div class="{%if showSidebar%}col-lg-3 col-md-3 {%else%} col-md-15 {%endif%} col-sm-3 col-6 product-col">
				<div class="item_product_main item_product_main_relative">
					{%include 'product_grid_office'%}	
				</div>
			</div>	
			{% endfor %}
		</div>
	</section>
	{% else %}
	<div class="alert alert-warning  green-alert section" role="alert">
		Không có sản phẩm nào trong danh mục này.
	</div>
	{% endif %}
	{% if paginate.pages > 1 %}
	<div class="section pagenav">
		{% if paginate.pages > 1 %}
		{% include 'collection-paginate-pages' %}
		{% endif %}
	</div>
	{%endif%}
	{% endpaginate %}
</div>