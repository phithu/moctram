@charset "UTF-8";

/* ==========  VARIABLES  ========== */
$prefix: 'ega-';

{%assign header_font = settings.foodnbeverage_001__theme__title_font | remove: 'Google+' | replace: '+' , ' '%}
{%assign text_font = settings.foodnbeverage_001__theme__font | remove: 'Google+' | replace: '+' , ' '%}


$header_font: '{{ header_font }}', "Helvetica", "Arial", sans-serif;
$text_font: '{{ text_font }}', "Helvetica", "Arial", sans-serif;
$main_color : {{ settings.foodnbeverage_001__theme__main_color }};
$home_intro_bg : {{ settings.foodnbeverage_001__intro__bg }};
$category_bg : {{ settings.foodnbeverage_001__benefit__bg }};
$product_bg : {{ settings.foodnbeverage_001__product__bg }};
$product_color : {{ settings.foodnbeverage_001__product__color }};
$reviews_bg : {{ settings.foodnbeverage_001__reviews__bg }};
$footer_bg : {{ settings.foodnbeverage_001__footer__bg }};


/* ==========  COMMON  ========== */
html {
	font-size: 1em;
	line-height: 1.5;
	width: 100%;
	height: 100%;
	-ms-touch-action: manipulation;
	touch-action: manipulation;
}

body {
	width: 100%;
	min-height: 100%;
	margin: 0;
	&.menu-toggled{
		overflow-y: hidden; 
	}
}
a, body{
	color: #383838;
}
*{
	box-sizing: border-box;
}

::-moz-selection {
	background: #b3d4fc;
	text-shadow: none;
}

::selection {
	background: #b3d4fc;
	text-shadow: none;
}

img, iframe { max-width: 100%; }

h1, h2, h3, h4, h5, h6, p {
	margin: 0;
	padding: 0;
	font-weight: 400;
}

ul{
	padding: 0;
	margin: 0;
	list-style-type: none !important;
}

.clearfix::after {
  display: block;
  clear: both;
  content: "";
}

/* ==========  HELPERS  ========== */

.#{$prefix}hidden { 
	display: none !important;
}

.#{$prefix}inline-block { 
	display: inline-block !important;
}

.#{$prefix}block { 
	display: block !important;
}

.#{$prefix}hidden { 

	&--sm {
		@media(min-width: 576px) {
			display: none!important;
		}
	}

	&--md {
		@media(min-width: 768px) {
			display: none!important;
		}
	}

	&--lg {
		@media(min-width: 992px) {
			display: none!important;
		}
	}

	&--xl {
		@media(min-width: 1200px) {
			display: none!important;
		}
	}
}

.#{$prefix}inline-block { 

	&--sm {
		@media(min-width: 576px) {
			display: inline-block!important;
		}
	}

	&--md {
		@media(min-width: 768px) {
			display: inline-block!important;
		}
	}

	&--lg {
		@media(min-width: 992px) {
			display: inline-block!important;
		}
	}

	&--xl {
		@media(min-width: 1200px) {
			display: inline-block!important;
		}
	}
}

.#{$prefix}block { 

	&--sm {
		@media(min-width: 576px) {
			display: block!important;
		}
	}

	&--md {
		@media(min-width: 768px) {
			display: block!important;
		}
	}

	&--lg {
		@media(min-width: 992px) {
			display: block!important;
		}
	}

	&--xl {
		@media(min-width: 1200px) {
			display: block!important;
		}
	}
}

.#{$prefix}flex { 

	&--sm {
		@media(min-width: 576px) {
			display: flex!important;
		}
	}

	&--md {
		@media(min-width: 768px) {
			display: flex!important;
		}
	}

	&--lg {
		@media(min-width: 992px) {
			display: flex!important;
		}
	}

	&--xl {
		@media(min-width: 1200px) {
			display: flex!important;
		}
	}
}


/* ==========  TYPOGRAPHY  ========== */
html, body {
	font-family: $text_font;
}
p {
	font-weight: 400;
	letter-spacing: 0;
	margin-bottom: 16px;
}
a {
	text-decoration: none;
}

/* ==========  GRID  ========== */
.#{$prefix}container {
	padding-left: 15px;
	padding-right: 15px;
	width: 100%;
	margin: 0 auto;

	@media (min-width: 576px) {
		max-width: 540px;
	}

	@media (min-width: 768px) {
		max-width: 720px;
	}

	@media (min-width: 992px) {
		max-width: 960px;
	}

	@media (min-width: 1200px) {
		max-width: 1230px;
	}
}
.#{$prefix}row {
	display: flex;
	flex-wrap: wrap;
	margin-left: -10px;
	margin-right: -10px;
}
.#{$prefix}col, [class*=#{$prefix}col-] {
	padding-left: 10px;
	padding-right: 10px;
}

/* ==========  MIXINS  ========== */

@mixin translateX($v) {
	-webkit-transform: translateX($v);
	-ms-transform: translateX($v);
	-o-transform: translateX($v);
	transform: translateX($v);
}

@mixin translateY($v) {
	-webkit-transform: translateY($v);
	-ms-transform: translateY($v);
	-o-transform: translateY($v);
	transform: translateY($v);
}

@mixin translate3d($x,$y) {
	-webkit-transform: translate3d($x,$y,0);
	-ms-transform: translate3d($x,$y,0);
	-o-transform: translate3d($x,$y,0);
	transform: translate3d($x,$y,0);
}

@mixin transform($values...){
	@each $var in $values {
		-webkit-transform: #{$var};
		-o-transform: #{$var};
		transform: #{$var};
	}
}

@mixin transition($values...){
	@each $var in $values {
		-webkit-transition: #{$var};
		-o-transition: #{$var};
		transition: #{$var};
	}
}

