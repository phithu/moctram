/** Break point **/
$breakpoint_sm: (576px, sm);
$breakpoint_md: (768px, md);
$breakpoint_lg: (992px, lg);
$breakpoint_xl: (1200px, xl);

/** Collumn **/


@mixin ega_col_flex() {
   -ms-flex-preferred-size: 0; flex-basis: 0; -ms-flex-positive: 1;  flex-grow: 1; max-width: 100%;
}
@mixin ega_col($i, $collumns) {
   -ms-flex: 0 0 percentage($i / $collumns);
   flex: 0 0 percentage($i / $collumns);
   max-width: percentage($i / $collumns);
}

.#{$prefix}col {
   @include ega_col_flex();
}

@for $i from 1 through 12 {
   .#{$prefix}col-#{$i} {
      @include ega_col($i, 12);
   }
}

@each $i in 20, 30, 40, 60, 70, 80, 90 {
   .#{$prefix}col-#{$i} {
      @include ega_col($i, 100);
   }
}

@each $breakpoint, $infix in $breakpoint_sm, $breakpoint_md, $breakpoint_lg, $breakpoint_xl {
   @media (min-width: $breakpoint) {

      .#{$prefix}col-#{$infix} {
         @include ega_col_flex();
      }

      @for $i from 1 through 12 {
         .#{$prefix}col-#{$infix}-#{$i} {
            @include ega_col($i, 12);
         }
         .#{$prefix}order-#{$infix}-#{$i} {
            -ms-flex-order: $i;
            order: $i;
         }
   }

   .#{$prefix}col-ten {
      @include ega_col(10, 100);
   }

   @each $i in 20, 30, 40, 60, 70, 80, 90 {
      .#{$prefix}col-#{$infix}-#{$i} {
         @include ega_col($i, 100);
      }
}

}
}

/* ==========  MIXINS  ========== */

@mixin translateX($v) {
   -webkit-transform: translateX($v);
   -ms-transform: translateX($v);
   -o-transform: translateX($v);
   transform: translateX($v);
}

@mixin translateY($v) {
   -webkit-transform: translateY($v);
   -ms-transform: translateY($v);
   -o-transform: translateY($v);
   transform: translateY($v);
}

@mixin translate3d($x,$y) {
   -webkit-transform: translate3d($x,$y,0);
   -ms-transform: translate3d($x,$y,0);
   -o-transform: translate3d($x,$y,0);
   transform: translate3d($x,$y,0);
}

@mixin transform($values...){
   @each $var in $values {
      -webkit-transform: #{$var};
      -o-transform: #{$var};
      transform: #{$var};
   }
}

@mixin transition($values...){
   @each $var in $values {
      -webkit-transition: #{$var};
      -o-transition: #{$var};
      transition: #{$var};
   }
}

/* ====== embed-responsive ======*/

.embed-responsive {
  position: relative;
  display: block;
  width: 100%;
