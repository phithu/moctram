function comboUpdateCart(ele) {
	let listCart = $(ele).parents(".content-product-list").find('[name^="updates"]');

	var tmp = "";
	for (var i = 0; i < listCart.length; i++) {
		var qty = parseInt(listCart[i].value);
		if (i > 0) tmp += "&";
		tmp += "updates[]=" + qty;
