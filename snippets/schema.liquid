{%unless template contains 'index' or template contains '404'%}
<script type="application/ld+json">
        {
        "@context": "http://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": 
        [
            {
                "@type": "ListItem",
                "position": 1,
                "item": 
                {
                  "@id": "{{shop.url}}",
                  "name": "Trang chủ"
                }
            },
      {% if template contains 'product' %}
            {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/{{ product.handle }}",
                  "name": "{{ product.title }}"
                }
            }
      {%endif%}
        {% if template contains 'collection' and collection.handle %}
      {%if collection.handle == 'all'%}
      {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/collections/all",
                  "name": "{{ collection.title }}"
                }
            }{% if current_tags %},{%endif%}
      {%else%}
      {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/{{ collection.handle }}",
                  "name": "{{ collection.title }}"
                }
            }{% if current_tags %},{%endif%}
      {%endif%}
      {% if current_tags %}
        {%if collection.handle == 'all'%}
        {
          "@type": "ListItem",
          "position": 3,
          "item": 
          {
            "@id": "{{shop.url}}/collections/all/{{ current_tags.first }}",
            "name": "{{ current_tags.first }}"
          }
        }
        {%else%}
        {
          "@type": "ListItem",
          "position": 3,
          "item": 
          {
            "@id": "{{shop.url}}/{{ collection.handle }}/{{ current_tags.first }}",
            "name": "{{ current_tags.first }}"
          }
        }
        {%endif%}
      {%endif%}
      {%endif%}
      {% if template contains 'article' %}
            {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}{{ blog.url }}",
                  "name": "{{ blog.title }}"
                }
            },
      {
                "@type": "ListItem",
                "position": 3,
                "item": 
                {
                  "@id": "{{shop.url}}{{ article.url }}",
                  "name": "{{ article.title }}"
                }
            }
      {%endif%}
      {% if template == 'blog' %}
      {%if current_url contains 'blogs/all'%}
            {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/blogs/all",
                  "name": "{{ blog.title }}"
                }
            }
      {%else%}
        {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}{{blog.url}}",
                  "name": "{{ blog.title }}"
                }
            }
      {%if current_tags%}
      ,
      {
                "@type": "ListItem",
                "position": 3,
                "item": 
                {
                  "@id": "{{shop.url}}{{blog.url}}/{{ current_tags.first }}",
                  "name": "{{ current_tags.first }}"
                }
            }
      {%endif%}
      {%endif%}
      {%endif%}
      {% if template contains 'page' %}
      {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/{{ page.handle }}",
                  "name": "{{ page.title }}"
                }
            }
      {% endif %}
      {% if template contains 'cart' %}
      {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/cart",
                  "name": "Giỏ hàng"
                }
            }
      {% endif %}
    {% if template contains 'search' %}
      {
                "@type": "ListItem",
                "position": 2,
                "item": 
                {
                  "@id": "{{shop.url}}/search",
                  "name": "Tìm kiếm"
                }
            }
      {% endif %}
        ]
        }
</script>
{%endunless%}