<section class="section_product_new section">
	<div class="container border-0">
		{% assign product_count = collections[settings.section_new_url]products_count %}
		<div class="title_module_main heading-bar d-flex justify-content-between align-items-center">
			<h2 class="heading-bar__title">
				<a class='link' href="{{settings.section_new_url}}" title="{{settings.section_new_title}}">{{settings.section_new_title}}</a>
			</h2>
		</div>
		{% if product_count >= 1 %}
		<div class="slick-new mt-3 row" data-section="product-new-section">
			{%assign product_html = '' -%}
			{% for product in collections[settings.section_new_url].products limit: {{settings.section_new_limit}}%}
			<div class='col-md-12 col-5 product-col'>
				<div class="item_product_main	item_skeleton">

				</div>

			</div>
			{%capture product_block -%}

			<div class='col-md-12 col-5 product-col'>
				<div class="item_product_main">
					{% include 'product_grid_office' %}
				</div>

			</div>	
			{%endcapture%}
			{%assign product_html = product_html | append : product_block -%}

		
			{%endfor%}
				<script  type="text/x-custom-template" data-template="product-new-section">
					{{product_html}}
			</script>

		</div>
		<div class="col-12 text-center mt-3">
			<a href="{{settings.section_new_url}}" title="Xem tất cả" class="btn btn-main btn-icon">
				Xem tất cả {%include 'icon-arrow'%}
			</a>
		</div>
		{%else%}
		<p class="a-center margin-top-15 mt-3">Hiện tại chưa có sản phẩm nào trong danh mục này!...</p>
		{%endif%}

	</div>
</section>