{%for i in (1..3) -%}
	{%capture use_label %}use_label_{{i}}{%endcapture-%}
	{%capture label%}label_{{i}}.png{%endcapture-%}
	{%capture label_tag %}label_{{i}}_tag{%endcapture -%}
	{%if settings[use_label]-%}
		{%assign tag = settings[label_tag] | strip -%}
		{%if product.tags contains tag %}
			<img class="product-badge" 
				 loading="lazy"
				src="{{label | asset_url}}" alt="{{tag}}"/>
		{%endif -%}
	{%endif-%}
{%endfor -%}